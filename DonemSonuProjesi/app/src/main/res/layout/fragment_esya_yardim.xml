<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adınızı ve Soyadınızı giriniz" />

    <EditText
        android:id="@+id/editTextYas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yaşınızı giriniz" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon Numaranızı giriniz"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextAdres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Açık Adres giriniz"/>

    <EditText
        android:id="@+id/editTextKisiSayisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Siz dahil kaç kişisiniz?" />

    <EditText
        android:id="@+id/editTextihtiyaclar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="İhtiyacınız olan gıda,hijyen,kıyafet vb.." />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gönder" />

</LinearLayout>